@model BeanScene.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Person Name</dt>
        <dd class="col-sm-10">@Model.Person.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Person.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Person.Phone</dd>

        <dt class="col-sm-2">Sitting</dt>
        <dd class="col-sm-10">@Model.Sitting.Name</dd>

        <dt class="col-sm-2">Start</dt>
        <dd class="col-sm-10">@Model.Start.ToString("f")</dd>

        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Duration</dd>

        <dt class="col-sm-2">Number of Guests</dt>
        <dd class="col-sm-10">@Model.Pax</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
