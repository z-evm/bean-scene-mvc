@model IEnumerable<dynamic>

<h1>Staff Members</h1>

<!-- Button to Navigate to Members Index -->
<div class="mb-3">
    <a asp-action="Members"method='get' class="btn btn-success">View Members</a>
</div>

<!-- Search Form -->
<form asp-action="Staff" method="get" class="mb-3">
    <div class="form-group row">
        <div class="col-md-10">
            <input type="text" name="email" class="form-control" placeholder="Search by email" value="@ViewData["EmailSearch"]" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<!-- Users Table -->
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Current Role(s)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.CurrentRoles</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-primary">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
