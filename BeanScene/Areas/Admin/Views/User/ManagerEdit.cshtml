@model dynamic

<h1>Edit Roles for @Model.Email</h1>

<form asp-action="Edit" asp-controller="User" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group">
        <label for="selectedRole">Select Role:</label>
        <select name="selectedRole" class="form-control">
            <option value="">-- Select a Role --</option>
            @foreach (var role in Model.Roles)
            {
                if (Model.CurrentRoles.Contains(role))
                {
                    <option value="@role" selected="selected">@role</option>
                }
                else
                {
                    <option value="@role">@role</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Update Role</button>
</form>
