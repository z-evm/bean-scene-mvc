@model dynamic

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Edit Roles for @Model.Email</h1>

    <form asp-action="Edit" asp-controller="User" method="post" class="p-4 shadow rounded bg-light">
        @Html.AntiForgeryToken()

        <!-- Hidden Field for User ID -->
        <input type="hidden" name="userId" value="@Model.UserId" />

        <!-- Role Selection -->
        <div class="form-group mb-3">
            <label for="selectedRole" class="form-label fw-bold">Select Role:</label>
            <select name="selectedRole" class="form-control">
                <option value="">-- Select a Role --</option>
                @foreach (var role in Model.Roles)
                {
                    if (Model.CurrentRoles.Contains(role))
                    {
                        <option value="@role" selected="selected">@role</option>
                    }
                    else
                    {
                        <option value="@role">@role</option>
                    }
                }
            </select>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-check-circle"></i> Update Role
            </button>
        </div>
    </form>
</div>

<!-- Custom Styling -->
<style>
    .container {
        max-width: 600px;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
        color: var(--bean-dark-blue); /* Updated to match the first code's color scheme */
    }

    .form-label {
        font-weight: bold;
        color: #495057;
    }

    .form-control {
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

    .form-control:focus {
        border-color: var(--bean-light-blue); /* Consistent with the primary color scheme */
        box-shadow: 0 0 5px rgba(74, 161, 181, 0.5);
    }

    .btn-success {
        background-color: var(--bean-light-blue); /* Updated to use bean-light-blue */
        border-color: var(--bean-light-blue);
        font-size: 1.2rem;
        padding: 10px 20px;
    }

    .btn-success:hover {
        background-color: var(--bean-mid-blue); /* Updated to use bean-mid-blue */
        border-color: var(--bean-mid-blue);
    }

    .shadow {
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .rounded {
        border-radius: 8px;
    }
</style>
