@model BeanScene.Models.Sitting

@{
    ViewData["Title"] = "Delete Sitting";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-4">Delete Sitting</h1>

    <div class="alert alert-warning text-center" role="alert" >
        <h4 class="alert-heading">Are you sure you want to delete this sitting?</h4>
        <p>This action cannot be undone and may affect related reservations or data.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header  text-white" style="background-color: #EBC136;">
            <h5>Sitting Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Start Time:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Start)</dd>

                <dt class="col-sm-3">End Time:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.End)</dd>

                <dt class="col-sm-3">Capacity:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacity)</dd>

                <dt class="col-sm-3">Type:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Type)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="text-center">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg me-2">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>

<!-- Custom Styles -->
<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }

    .btn-lg i {
        margin-right: 5px;
    }

    .alert-heading {
        font-size: 1.5rem;
    }

    dl dt {
        font-weight: bold;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
