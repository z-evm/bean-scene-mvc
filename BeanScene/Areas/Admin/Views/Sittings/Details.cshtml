@model BeanScene.Models.Sitting

@{
    ViewData["Title"] = "Sitting Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color: #2F6672;">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color: #2F6672;">
            <h4 class="mb-0" style="color: white;">Sitting Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Start Time:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Start)</dd>

                <dt class="col-sm-4">End Time:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.End)</dd>

                <dt class="col-sm-4">Capacity:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>

                <dt class="col-sm-4">Type:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4">Closed:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Closed)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .container {
        max-width: 700px;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .row dt {
        font-weight: bold;
    }

    .btn-lg i {
        margin-right: 8px;
    }

    .btn-primary {
        background-color: #083944;
        border-color: #083944;
    }

    .btn-primary:hover {
        background-color: #2F6672;
        border-color: #2F6672;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
