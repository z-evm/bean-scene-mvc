@model dynamic
@{
    ViewData["Title"] = "Search for a Sitting"; // Header
}

<h2>Search for a Sitting</h2>

<form asp-action="Search" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group"> 
        <label for="Date">Date</label>
        <input type="date" id="Date" name="date" class="form-control" required />
    </div>

   <div class="form-group">
    <label for="timePicker">Time</label>
    <select id="timePicker" name="time" class="form-control">
        <!-- Generate hours and minutes -->
        @for (int hour = 7; hour < 22; hour++)
        {
            <option value="@hour:00">@hour.ToString("D2"):00</option>
            <option value="@hour:15">@hour.ToString("D2"):15</option>
            <option value="@hour:30">@hour.ToString("D2"):30</option>
            <option value="@hour:45">@hour.ToString("D2"):45</option>
        }
        </select>
    </div>



    <div class="form-group">
        <label for="Guests">Number of Guests</label>
        <input type="number" id="Guests" name="guests" class="form-control" required min="1" />
    </div>
    
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
