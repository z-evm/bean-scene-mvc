@model BeanScene.Models.Reservation

<div class="container mt-5">
    <!-- Header Section -->
    <h2 class="text-center mb-4">Reservation Details</h2>

    <!-- Reservation Information Card -->
    <div class="card shadow-sm">
        <div class="card-header custom-header text-white">
            <h5>Reservation Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Person Name:</dt>
                <dd class="col-sm-8">@Model.Person?.Name</dd>

                <dt class="col-sm-4">Person Email:</dt>
                <dd class="col-sm-8">@Model.Person?.Email</dd>

                <dt class="col-sm-4">Person Phone:</dt>
                <dd class="col-sm-8">@Model.Person?.Phone</dd>

                <dt class="col-sm-4">Start Time:</dt>
                <dd class="col-sm-8">@Model.Start.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-4">End Time:</dt>
                <dd class="col-sm-8">@Model.End?.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-4">Duration:</dt>
                <dd class="col-sm-8">@Model.Duration.ToString()</dd>

                <dt class="col-sm-4">Number of Guests:</dt>
                <dd class="col-sm-8">@Model.Pax</dd>

                <dt class="col-sm-4">Status:</dt>
                <dd class="col-sm-8">@Model.ReservationStatus?.Name</dd>

                <dt class="col-sm-4">Sitting:</dt>
                <dd class="col-sm-8">@Model.Sitting?.Name </dd>

                <dt class="col-sm-4">Notes:</dt>
                <dd class="col-sm-8">@Model.Notes</dd>
            </dl>
        </div>
    </div>

    <!-- Assigned Tables Section -->
    <h3 class="mt-4">Assigned Tables</h3>
    @if (Model.Tables != null && Model.Tables.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var table in Model.Tables)
            {
                <li class="list-group-item">
                    <strong>Table Number:</strong> @table.Number
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No tables assigned to this reservation.</p>
    }

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <a asp-action="EditSearch" asp-route-id="@ViewBag.ReservationId" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Reservations
        </a>
    </div>
</div>

<!-- Styling -->
<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #343a40;
    }

    .card-header {
        font-size: 1.2rem;
        font-weight: bold;
        background:  #4AA1B5; /* Custom gradient background */
        color: white; /* Text color */
    }

    .card-body dl dt {
        font-weight: bold;
        color: #495057;
    }

    .card-body dl dd {
        color: #343a40;
    }

    .list-group-item {
        font-size: 1rem;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 5px;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
    }

    .btn-primary {
        background-color: #083944;
        border-color: #083944;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #4AA1B5;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
