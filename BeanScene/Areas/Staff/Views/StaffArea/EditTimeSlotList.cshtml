@{
    var timeSlots = ViewBag.TimeSlots as List<(DateTime SlotStart, bool IsAvailable)>;
    int sittingId = ViewBag.SittingId;

}

<h2>Available Time Slots</h2>

@if (timeSlots != null && timeSlots.Any())
{
    <form asp-action="EditBook" method="get">
        @Html.AntiForgeryToken()

        <!-- Include SittingId -->
        <input type="hidden" name="id" value="@ViewBag.ReservationId" />
        <input type="hidden" name="sittingId" value="@ViewBag.SittingId" />
        <input type="hidden" name="guests" value="@ViewBag.Guests" />

        <table class="table">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Time</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slot in timeSlots)
                {
                    <tr>
                        <td>
                            @if (slot.IsAvailable)
                            {
                                <!-- Use radio buttons for selectable time slots -->
                                <input type="radio" name="selectedTimeSlot" value="@slot.SlotStart.ToString("yyyy-MM-ddTHH:mm:ss")" required />
                            }
                        </td>
                        <td>@slot.SlotStart.ToString("HH:mm")</td>
                        <td>@(slot.IsAvailable ? "Available" : "Full")</td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Book</button>
    </form>
}
else
{
    <p>No available time slots within the specified range.</p>
}
