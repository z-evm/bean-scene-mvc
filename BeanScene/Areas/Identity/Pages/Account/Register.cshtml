@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "auth-page register-page";
}

<div class="register-box d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-6 register-card p-4">
        <h1 class="text-center text-bean-gold mb-4">REGISTER</h1>
        <form method="post" class="needs-validation">
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label text-bean-light-blue"></label>
                <input asp-for="Input.Email" class="form-control border-bean-light-blue" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label text-bean-light-blue"></label>
                <input asp-for="Input.Password" class="form-control border-bean-light-blue" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label text-bean-light-blue"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control border-bean-light-blue" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-bean w-100">Register</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a asp-page="./Login" class="text-bean-light-blue">Already have an account? Log in</a>
        </div>
    </div>
</div>
