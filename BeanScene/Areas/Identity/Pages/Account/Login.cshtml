@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    ViewData["BodyClass"] = "auth-page register-page";
}

<div class="login-box d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-6 login-card p-4">
        <h1 class="text-center text-bean-gold mb-4">LOGIN</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="align-items-center justify-content-center needs-validation">
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label text-bean-light-blue"></label>
                <input asp-for="Input.Email" class="form-control border-bean-light-blue" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label text-bean-light-blue"></label>
                <input asp-for="Input.Password" class="form-control border-bean-light-blue" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3" style="color: #FFFFFF">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label text-bean-mid-blue"></label>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-bean w-100">Log in</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a asp-page="./ForgotPassword" class="text-bean-light-blue">Forgot your password?</a>
        </div>
    </div>
</div>
